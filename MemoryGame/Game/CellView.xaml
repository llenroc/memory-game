<UserControl x:Class="MemoryGame.Game.CellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Game"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Margin="3">
    <Grid>
        <Rectangle Name="rectBackground" RadiusX="4" RadiusY="4" Fill="BlueViolet"></Rectangle>
        <Grid Name="gridContent" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.LayoutTransform>
                <ScaleTransform x:Name="scale" ScaleX="0" CenterX="0.5"/>
            </Grid.LayoutTransform>
        </Grid>
    </Grid>
</UserControl>
